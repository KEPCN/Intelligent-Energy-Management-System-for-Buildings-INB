    <!--loading page graphic-->
    <div class="se-pre-con"></div>
    <!--loading page graphic-->
    <!--header-->

    <!--header-->
    <div class="" id="loginBox" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <form action="" method="POST">
                <!-- login form -->
                <div class="modal-content">
                    <div class="modal-header ">
                        <div class="modal-title text-center justify-content-center d-flex w-100 flex-column" id="exampleModalLabel">
                            <div>
                                <img src="img/icon/logoT36.png">

                            </div>
                            <h5>LOGIN</h5>

                        </div>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body p-2">
                        <div class="row mx-3 justify-content-center align-items-center  pb-2">
                            <label class="col h5" for="loginUserName">USERNAME:</label>
                            <div class="col">
                                <input type="text" class="form-control bg-white" id="loginUserName" name="loginUserName" placeholder="USERNAME" required>

                            </div>
                        </div>

                        <br>
                        <div class="row mx-3 justify-content-center align-items-center  pb-2">
                            <label class="col h5" for="loginPass">PASSWORD:</label>
                            <div class="col">
                                <input type="password" class="form-control bg-white" id="loginPass" name="loginPass" placeholder="PASSWORD" required>

                            </div>
                        </div>

                    </div>
                    <!--end modal body-->
                    <div class="modal-footer text-center justify-content-center d-flex w-100 flex-column">
                        <input type="submit" class="btn  btn-secondary w-50" value="LOGIN">
                    </div>
                </div>
            </form>
        </div>
    </div>
    </div>

