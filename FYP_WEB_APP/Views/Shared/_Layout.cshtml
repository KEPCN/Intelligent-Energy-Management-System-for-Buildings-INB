@using Microsoft.AspNetCore.Http
@model FYP_APP.Models.MongoModels.MongoUserModel

@{
    var userName = Context.Session.GetString("userName");
}

    <head>
        <link rel="shortcut icon" href="~/img/icon/iconT36.ico" type="image/x-icon">
        <link rel="icon" href="~/img/icon/iconT36.ico" type="image/x-icon">
        <link rel="stylesheet" href="~/css/style.css">
        <link rel="stylesheet" href="~/css/callout.css">
        <link rel="stylesheet" href="~/css/bootstrap.min.css">

        <!--<script src="~/js/bootstrap/jquery.min.js"></script>-->
        <script src="~/js/jquery/jquery-3.5.1.min.js"></script>
        <script src="~/js/bootstrap/popper.min.js"></script>
        <script src="~/js/bootstrap/bootstrap.min.js"></script>
        <script src="~/js/Chart/Chart.min.js"></script>
        <script src="~/js/heatmap/heatmap.js"></script>
        <script src="~/js/heatmap/heatmap.min.js"></script>

        
        <script src="~/js/jquery/jquery-ui-1.12.1/jquery-ui.js"></script>

        <script>
            $(document).ready(function () {
                resizeNav();
                $(window).resize(function () {
                    resizeNav();
                });
                $('.navbar-nav .nav-link').click(function () {
                    $('.navbar-nav .nav-link').removeClass('active');
                    $(this).addClass('active');
                });
                
                //$("#index").addClass('active');
            });
            function resizeNav() {
                $("#nav2").css({ "margin-top": $("#nav1").height() });
            }
        </script>
    </head>
<style>

    .nav-link {
        margin-right: 20px;
    }
</style>

<header>

    <nav class="statusBar navbar navbar-expand-sm py-0 py-md-0 navbar-dark fixed-top" id="nav1">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="#"><span id="" class="statusTxt"><b>OUT DOOR</b></span></a>
            </li>

            <li class="nav-item">
                <a class="nav-link " href="#">
                    <img src="~/img/icon/weather24.png">
                    <span id="" class="statusTxt">30 &#8451;</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="#">
                    <img src="~/img/icon/humidity24.png">
                    <span id="" class="statusTxt">90%</span>

                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="#">
                    <img src="~/img/icon/sun24.png">
                    <span id="" class="statusTxt">Sunny</span>

                </a>
            </li>
        </ul>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <img src="~/img/icon/user24.png">
                    <span id="userName" class="statusTxt">
                        @if (userName != null)
                        {
                            <span>@userName</span>
                        }
                        else
                        {
                            <span>Login</span>
                        }
                    </span>
                </a>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                    <img src="~/img/icon/world24.png">
                    <span id="language" class="statusTxt">EN</span>
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">EN</a>
                    <a class="dropdown-item" href="#">CN</a>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="#">

                    <img src="~/img/icon/bell24.png">
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="~/Home/UserSetting">
                    <img src="~/img/icon/settings24.png">
                </a>
            </li>
        </ul>
    </nav>


    <nav class="headerarea navbar navbar-expand-lg navbar-dark bg-dark text-white" id="nav2">
        <a class="navbar-brand" href="~/Home/Index"><img src="~/img/icon/logoT36.png" height="40px"><span id=""></span> </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon "></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item " id="index">
                    <a class="nav-link" href="~/Home/Index">Home</a>
                </li>
                <li class="nav-item" id="devices">
                    <a class="nav-link " href="~/Devices/Devices">Devices</a>
                </li>
                <li class="nav-item" id="sensors">
                    <a class="nav-link " href="~/Sensors/Sensors">Sensors</a>
                </li>
                <li class="nav-item" id="floors">
                    <a class="nav-link " href="~/Floors/Floors">Floors</a>
                </li>
                <li class="nav-item" id="rooms">
                    <a class="nav-link  " href="~/Rooms/Rooms">Rooms</a>
                </li>
                <li class="nav-item" id="schedule">
                    <a class="nav-link  " href="~/Schedules/Schedules">Schedules</a>
                </li>
            </ul>
        </div>

    </nav>
</header>

<body>
    @RenderBody()
</body>
