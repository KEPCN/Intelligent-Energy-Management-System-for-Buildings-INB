@*
    room detail page
    Sensor and Device detail
    bg-dark
*@

<div class="col-lg-6 col-xl-6 offset-xl-0 ml-4  py-0" style=" max-width: 700px">
    <div id="detailDiv" class="card text-white bg-dark mb-3" style="max-width: 30rem;">
        <div class="card-header">
            <h4>
                <a class="text-white" href="#">
                    <p style="padding:0"><b id="typeName">Sensor Device Detail</b><img id="onOff" class="float-right mt-1" style="width: 24px;" src="~/img/icon/power-button-on36.png" /></p>
                </a>
            </h4>
        </div>
        <div class="card-body" style="margin-top:-20px">
            <button id="editBtn" class="btn btn-outline-secondary mt-0 px-0 mr-1 " type="button" style="width: 80px; height: 40px">
                <img src="~/img/icon/edit32_white.png" style="height: 24px;width:24px;">
                <snap class="text-white">Edit</snap>
            </button>
            <p class="ard-text p-0 m-0" id="sdid">--</p>
            <h3 class="card-title">
                <img id="typeImg" class="mr-2" style="width: 32px;" src="~/img/icon/air-conditioner32.png" />
                <p id="current_value"> -- </p>
            </h3>
            <p class="card-text">
                <img style="width: 24px;" src="~/img/icon/lighting32.png" />
                <b id="totalPower">--</b> -
                <snap class="card-text"><small id="avgPower"> Avg: 9kw / dy</small></snap>
            </p>
            <a id="turnOnOff" class="badge badge-pill badge-danger" href="#" style="font-size: 14px">--</a>
            <p class="card-text"><small id="lastUpdateTimes">--</small></p>
            <!--
            <p class="card-text"><b>Log</b></p>
            <p class="card-text">01-02-2020 11:00:00 <b>25C</b></p>
            <p class="card-text"><small>Last modifly on 02-02-2020</small></p>
                -->
        </div>
    </div>
</div>